<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp"
    android:background="@color/cardview_dark_background"
    tools:context=".CustomTimerSetActivity">


    <TextView
        android:id="@+id/custom_selectTitleTV"
        android:text="Select Next Workout Type"
        android:textSize="20sp"
        android:textColor="@color/cardview_light_background"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@id/custom_workoutName_ET"
        android:layout_marginTop="20dp"/>
    <Button
        android:id="@+id/custom_reps_Btn"
        android:text="Untimed Repetition Interval"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@id/custom_selectTitleTV"/>
    <Button
        android:id="@+id/custom_timed_Btn"
        android:text="Timed Interval"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@id/custom_reps_Btn"/>
    <Button
        android:id="@+id/custom_repTimed_Btn"
        android:text="Timed Repetition Interval"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@id/custom_timed_Btn"/>
    <Button
        android:id="@+id/custom_rest_Btn"
        android:text="Rest Interval"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@id/custom_repTimed_Btn"/>

    <TextView
        android:id="@+id/custom_save_TitleTV"
        android:text="Save And Start Circuit"
        android:textSize="20sp"
        android:textColor="@color/cardview_light_background"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@id/custom_rest_Btn"
        android:layout_marginTop="40dp"/>
    <Button
        android:id="@+id/custom_save_Btn"
        android:text="Start/Save"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@id/custom_save_TitleTV"/>


</RelativeLayout>