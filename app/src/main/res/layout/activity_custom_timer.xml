<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/customTimerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cardview_dark_background"
    tools:context=".CustomTimerActivity">
    <TextView
        android:id="@+id/CustomCircuitNameTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Circuit Name Text"
        android:textSize="20sp"
        android:textColor="@color/cardview_light_background"
        android:textAlignment="center"
        android:layout_marginTop="20dp"/>
    <TextView
        android:id="@+id/CustomCircuitIntervalNameTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="Interval Name"
        android:textSize="25sp"
        android:textColor="@color/cardview_light_background"
        android:layout_marginTop="100dp"
        android:layout_below="@id/CustomCircuitNameTV"/>
    <TextView
        android:id="@+id/CustomCircuitTimerTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="00:00"
        android:textSize="60sp"
        android:textColor="@color/cardview_light_background"
        android:layout_marginTop="10dp"
        android:layout_below="@id/CustomCircuitIntervalNameTV"/>
    <Button
        android:id="@+id/CustomCircuitNextBTN"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Next Workout"
        android:textSize="20sp"
        android:layout_marginTop="50dp"
        android:layout_below="@id/CustomCircuitTimerTV"/>
    <Button
        android:id="@+id/CustomCircuitDoneBTN"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Done"
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        android:layout_below="@id/CustomCircuitNextBTN"/>
</RelativeLayout>